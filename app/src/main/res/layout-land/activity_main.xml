<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/doodles"/>

    <EditText
        android:id="@+id/numbers_edit_text"
        style="@style/ScreenStyle.Main" />

    <EditText
        android:id="@+id/actionEditText"
        style="@style/ScreenStyle.Add" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:columnCount="4"
        tools:ignore="MissingConstraints">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reset_button"
            style="@style/ButtonStyle.Actions"
            android:text="@string/button_reset" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_button"
            style="@style/ButtonStyle.ActionsSmall"
            android:text="@string/button_delete" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_number_sign_button"
            style="@style/ButtonStyle.ActionsSmall"
            android:text="@string/button_change" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/plus_button"
            style="@style/ButtonStyle.Actions"
            android:text="@string/button_plus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_seven_button"
            style="@style/ButtonStyle.Numbers"
            android:text="@string/button_seven" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_eight_button"
            style="@style/ButtonStyle.Numbers"
            android:text="@string/button_eight" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_nine_button"
            style="@style/ButtonStyle.Numbers"
            android:text="@string/button_nine" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/minus_button"
            style="@style/ButtonStyle.Actions"
            android:text="@string/button_minus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_four_button"
            style="@style/ButtonStyle.Numbers"
            android:text="@string/button_four" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_five_button"
            style="@style/ButtonStyle.Numbers"
            android:text="@string/button_five" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_six_button"
            style="@style/ButtonStyle.Numbers"
            android:text="@string/button_six" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/multiply_button"
            style="@style/ButtonStyle.Actions"
            android:text="@string/button_multiply" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_one_button"
            style="@style/ButtonStyle.Numbers"
            android:text="@string/button_one" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_two_button"
            style="@style/ButtonStyle.Numbers"
            android:text="@string/button_two" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_three_button"
            style="@style/ButtonStyle.Numbers"
            android:text="@string/button_three" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/divide_button"
            style="@style/ButtonStyle.Actions"
            android:text="@string/button_divide" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_zero_button"
            style="@style/ButtonStyle.Numbers"
            android:text="@string/button_zero" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dot_button"
            style="@style/ButtonStyle.Actions"
            android:text="@string/button_dot" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/result_button"
            style="@style/ButtonStyle.Actions"
            android:layout_row="4"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="@string/button_result" />

    </GridLayout>


</FrameLayout>